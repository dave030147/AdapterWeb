<body>
    <!-- 使用權限模態框 -->
    <div class="modal" tabindex="-1" role="dialog" id="WaitModal">
        <div style="max-width: 100vw; padding: 5%; text-align:center; position: relative;" role="document">
            <div class="modal-content" style="background-color:lightgray; color:black; position: relative; overflow: hidden;">
                <div class="modal-header">
                    <h5 class="modal-title" id="title" style="text-align:center; width: 100%; font-size:90px;">啟動中...</h5>
                </div>
                <div class="modal-body">
                    <div style="height:50vh;">
                        <p style="font-size:55px;" id="Message">等待伺服器啟動</p>
                        <img src="/Loading.gif" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</body>
<script>
    window.addEventListener('DOMContentLoaded', (event) => {
        // 等待页面加载完成后执行
        document.getElementById('UseModal').style.display = 'none';
        document.getElementById('WaitModal').style.display = 'block';
    });

    document.getElementById("title").innerHTML = "@ViewBag.ServiceStatus";
    document.getElementById("Message").innerHTML = "@ViewBag.WaitMessage";

    setInterval(function () {
        location.reload();
    }, 10000); // 10秒鐘
</script>
